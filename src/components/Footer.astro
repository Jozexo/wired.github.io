---
import { socials } from '../data/socials';
import SocialIcon from './icons/SocialIcon.astro';
const year = new Date().getFullYear();
const email = 'jozehernandez@proton.me';
---
<footer class="mt-14 border-t border-(--grid) bg-[color-mix(in_oklab,var(--bg)_85%,black)]/80 backdrop-blur-md text-sm">
  <div class="container-wired py-8 grid gap-8 md:grid-cols-3">
    <div class="space-y-3 order-2 md:order-1">
      <h4 class="font-semibold text-(--muted)">wired :: footer</h4>
      <p class="leading-relaxed text-(--muted) max-w-xs">Este espacio vive como un nodo de identidad, proyectos y comunicación. Construido con <span class="text-(--accent-pink)">Astro</span>, inspirado en estética retro-terminal.</p>
    </div>
    <nav class="flex flex-col gap-2 order-1 md:order-2" aria-label="Secciones">
      <h4 class="font-semibold text-(--muted)">navegación</h4>
      <div class="grid grid-cols-2 gap-2 text-(--fg)">
        <a href="#identity" class="hover:underline">#identidad</a>
        <a href="#projects" class="hover:underline">#proyectos</a>
        <a href="#skills" class="hover:underline">#habilidades</a>
        <a href="#contact" class="hover:underline">#contacto</a>
      </div>
      <div class="pt-2">
        <a href="https://github.com/Jozexo/portfolio-wired" target="_blank" rel="noreferrer" class="inline-flex items-center gap-1 text-(--muted) hover:text-(--accent-pink)">
          <span class="text-(--accent-phosphor)">$</span> repo
        </a>
      </div>
    </nav>
    <div class="space-y-3 order-3">
      <h4 class="font-semibold text-(--muted)">contacto</h4>
      <ul class="space-y-2">
        <li><span class="text-(--accent-phosphor)">$</span> mail: <a href={`mailto:${email}`} class="hover:underline">{email}</a></li>
        <li><span class="text-(--accent-phosphor)">$</span> phone: <a href="tel:+584121919735" class="hover:underline">+58 412-1919735</a></li>
        <li class="pt-1 flex flex-wrap gap-3">
          {socials.map(s => (
            <a href={s.href} aria-label={s.name} title={s.name} target="_blank" rel="noreferrer" class="text-(--muted) hover:text-(--accent-pink) transition-colors inline-flex items-center gap-1">
              <SocialIcon name={s.name} size={16} />
              <span class="text-xs">{s.name}</span>
            </a>
          ))}
        </li>
      </ul>
      <div class="text-xs text-(--muted)">© {year} wired / José Hernández. Todos los bits reservados.</div>
    </div>
  </div>
  <div class="border-t border-(--grid) text-[10px] py-2 text-center text-(--muted)">
    <span class="text-(--accent-phosphor)">$</span> uptime: <span id="wired-uptime">0s</span>
  </div>
  <script type="module" src="/src/scripts/footer-uptime.ts"></script>
</footer>
