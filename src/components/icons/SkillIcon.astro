---
interface Props { name: string; size?: number }
const { name, size = 40 } = Astro.props as Props;
const n = (name || "").toLowerCase();
// Mapeo de cada skill a un ícono relevante (mezcla de simple-icons, lucide y mdi para conceptos genéricos)
const map: Record<string, string> = {
  // Dev / Lenguajes
  'python': 'simple-icons:python',
  'php': 'simple-icons:php',
  'javascript': 'simple-icons:javascript',
  'c#': 'simple-icons:csharp',
  'csharp': 'simple-icons:csharp',
  'flask': 'simple-icons:flask',
  'laravel': 'simple-icons:laravel',
  // Data
  'postgresql': 'simple-icons:postgresql',
  'sql server': 'simple-icons:microsoftsqlserver',
  'sql': 'lucide:database',
  // Terminal / Tooling
  'bash': 'simple-icons:gnubash',
  // Networking
  'mikrotik': 'simple-icons:mikrotik',
  'routing': 'lucide:git-branch', // Representa rutas/conexiones
  'firewall': 'mdi:firewall',
  'vpn': 'mdi:lock-check',
  'network': 'lucide:network',
  'infrastructure': 'lucide:server',
  // Security
  'pentesting': 'lucide:scan',
  'vuln-analysis': 'mdi:bug-outline',
  'hardening': 'lucide:shield-check'
};
const icon = map[n] || 'lucide:badge-help';
---
<iconify-icon icon={icon} width={size} height={size} aria-hidden="true" class="block" />
